@model CoMan.Models.CooperationRequestModel

@{
    ViewData["Title"] = "Accept cooperation request";
}

<h1>Accept</h1>

<h4>Accept cooperation request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Accept">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="text" name="action" value="Accept" hidden />
            <div class="form-group">
                <label asp-for="RecipentComment" class="control-label"></label>
                <textarea asp-for="RecipentComment" class="form-control"></textarea>
                <span asp-validation-for="RecipentComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Accept" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
