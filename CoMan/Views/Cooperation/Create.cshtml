@model CoMan.Models.CooperationModel

@{
    ViewData["Title"] = "Accept cooperation request";
}

<h1>Accept cooperation request</h1>

<h4>Create cooperation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="topic" class="control-label">Topic</label>
                <input type="text" id="topic" value="@ViewBag.TopicTitle" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="student" class="control-label">Student</label>
                <input type="text" id="student" value="@ViewBag.StudentEmail" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label for="studentComment" class="control-label">Student comment</label>
                <input type="text" id="studentComment" value="@ViewBag.StudentComment" class="form-control" readonly />
            </div>
            <input type="number" name="requestId" value="@ViewBag.RequestId" hidden />
            <input type="number" name="topicId" value="@ViewBag.TopicId" hidden />
            <input type="text" name="studentId" value="@ViewBag.StudentId" hidden />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
